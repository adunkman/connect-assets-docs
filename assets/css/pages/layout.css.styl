.global-header
  h1
    margin: 3rem 0
    position: relative
    text-align: center

    &:before
      background: #aaa
      content: ""
      display: block
      height: 2px
      margin-top: -1px
      position: absolute
      top: 50%
      width: 100%

    a
      background-color: #f5f5f5
      padding: 0 35px
      position: relative
      text-decoration: none

      &:before, &:after
        color: #aaa
        padding: 0 10px
        position: absolute
        top: -2px

      &:before
        content: "{"
        left: 0

      &:after
        content: "}"
        right: 0

.global-footer
  margin: 3rem 0
  position: relative
  text-align: center

  &:before
    background: #aaa
    content: ""
    display: block
    height: 2px
    margin-top: -1px
    position: absolute
    top: 50%
    width: 100%

  a
    background-color: #f5f5f5
    padding: 0 25px
    position: relative
    text-decoration: none

    &:before, &:after
      color: #aaa
      padding: 0 10px
      position: absolute
      top: -2px

    &:before
      content: "{"
      left: 0

    &:after
      content: "}"
      right: 0
