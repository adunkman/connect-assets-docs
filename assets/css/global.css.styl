serifs = "Georgia", "Droid Serif", serif
sans-serifs = "Myriad Pro", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, sans-serif

accent = #dc322f
white = #f5f5f5
grey = #aaaaaa
black = #333333

*
  box-sizing: border-box

::selection
  background-color: accent
  color: white

html
  -webkit-font-smoothing: antialiased
  background-color: white
  border-bottom: 0.5em accent solid
  border-top: 0.5em accent solid
  color: black
  font-family: sans-serifs
  min-height: 100%
  text-rendering: optimizeLegibility

body
  font-size: 1.2rem
  margin: 1em

  @media screen and (min-width: 30em)
    font-size: 1.4rem

p
  line-height: 1.4

h2, p, code.block
  margin: 0 auto 2rem auto
  max-width: 40rem

li
  line-height: 1.4
  margin: 0 0 1rem 0

a
  color: accent

  &:visited
    color: darken(accent, 20%)

code
  padding: 0.1rem 0.2rem
  background-color: #e5e5e5
  border-radius: 0.3rem

  &.block
    padding: 0.5rem
    display: block
    white-space: pre
    overflow-x: auto
